    <!--         ContentTemplate="{DataTemplate local:AboutPage}" /> -->
    <!--     <ShellContent -->
    <!--         Title          ="Browse" -->
    <!--         Icon           ="tab_feed.png" -->
    <!--         ContentTemplate="{DataTemplate local:ItemsPage}" /> -->
    <!-- </TabBar> -->
    
    <FlyoutItem Title="Tabs">
        <Tab Title="Left">
            <ShellContent Title="One" ContentTemplate="{DataTemplate tabs:TabOne}"/>
            <ShellContent Title="Two" ContentTemplate="{DataTemplate tabs:TabTwo}"/>
            <ShellContent Title="Three" ContentTemplate="{DataTemplate tabs:TabThree}"/>
        </Tab>
        <Tab Title="Right">
            <ShellContent Title="Three" ContentTemplate="{DataTemplate tabs:TabThree}"/>
            <ShellContent Title="Four" ContentTemplate="{DataTemplate tabs:TabFour}"/>
        </Tab>
    </FlyoutItem>
    
    <FlyoutItem Title="Pages">
    </FlyoutItem>
</Shell>